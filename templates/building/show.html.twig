{% extends 'base.html.twig' %}

{% block title %}Building Details{% endblock %}

{% block body %}
    <h1>Building Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ building.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ building.address }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ building.capacity }}</td>
            </tr>
        </tbody>
    </table>

    <h2>People in this building</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
        {% for person in building.people %}
            <tr>
                <td>{{ person.firstName }} {{ person.lastName }}</td>
                <td>{{ person.email }}</td>
                <td>{{ person.age }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No people in this building</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_building_index') }}">back to list</a>
{% endblock %}
